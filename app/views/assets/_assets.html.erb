<table class="table">
  <thead class="bg-light">
    <tr>
      <th class="border-0">Name</th>
      <% if @company.blank? %><th>Company</th><% end %>
      <th colspan="3" class="border-0"></th>
    </tr>
  </thead>

  <tbody>
    <% (assets || []).each do |asset| %>
    <tr>
      <td><%= link_to asset.name, asset %></td>
      <% if @company.blank? %><td><%= link_to asset.company, asset.company %></td><% end %>
      <td class="text-right">
        <%= link_to 'Edit', edit_asset_path(asset) %> |
        <%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
